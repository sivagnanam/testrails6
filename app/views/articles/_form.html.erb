<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors' %>
            <%= form_with(model:@article, class:"shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>
                <div class="form-group mb-3 row">
                    <%= f.label :title,class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder:"Title" %>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <%= f.label :description,class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder:"Description" %>
                    </div>
                </div>

                <div class="form-group row mb-3 justify-content-center">
                    <div class="col-2">
                        <%= f.submit class:"btn btn-outline-light btn-lg" %>
                    </div>
                </div>
            <% end %> 
        </div>
    </div>
    <%= link_to '[ Cancel and return to list page ]', articles_path(), class:"row justify-content-center text-info "%> 
</div>