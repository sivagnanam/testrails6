<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj:@user %>
            <%= form_with(model:@user, class:"shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>
                <div class="form-group mb-3 row">
                    <%= f.label :username,class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder:"User Name" %>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <%= f.label :email,class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder:"Email" %>
                    </div>
                </div>

                <div class="form-group mb-3 row">
                    <%= f.label :password,class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder:"Choose a Password" %>
                    </div>
                </div>

                <div class="form-group row mb-3 justify-content-center">
                    <div class="col-2">
                        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class:"btn btn-outline-light btn-lg") %>
                    </div>
                </div>
            <% end %> 
        </div>
    </div>
    <%= link_to '[ Cancel and return to list page ]', articles_path(), class:"row justify-content-center text-info "%> 
</div>