<h1 class="text-center mt-4">Create New Category</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj:@category %>
            <%= form_with(model:@category, class:"shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>
                <div class="form-group mb-3 row">
                    <%= f.label :name,"Category Name", class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder:"Category Name" %>
                    </div>
                </div>

                <div class="form-group row mb-3 justify-content-center">
                    <div class="col-2">
                        <%= f.submit class:"btn btn-outline-light btn-lg" %>
                    </div>
                </div>
            <% end %> 
        </div>
    </div>
    <%= link_to '[ Cancel and return to list page ]', articles_path(), class:"row justify-content-center text-info "%> 
</div>
